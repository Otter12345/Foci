<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customerfun"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fociandroid.foci.customer.ui.customerfun.CustomerFunFragment">

    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Restaurant: Vidaa"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/blue_lagoon"
        android:ems="10"
        android:textSize="24sp">
    </TextView>

    <ScrollView
        android:id="@+id/menu_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/restaurant_name"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="-4dp">

        <LinearLayout
            android:id="@+id/expanded_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/item1"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/card_round"
                android:clickable="true"
                android:tag="item1">

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:text="tasted" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="@color/blue_lagoon"
                    android:ems="12"
                    android:text="Smoked Sea Scouts"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:ems="12"
                    android:text="First Course"
                    android:textSize="18sp">

                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item2"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/card_round"
                android:clickable="true"
                android:tag="item2">

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:text="tasted" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="@color/blue_lagoon"
                    android:ems="12"
                    android:text="Smoked Sea Scouts"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:ems="12"
                    android:text="Second Course"
                    android:textSize="18sp">

                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item3"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/card_round"
                android:clickable="true"
                android:tag="item3">

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:text="tasted" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="@color/blue_lagoon"
                    android:ems="12"
                    android:text="Smoked Sea Scouts"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:ems="12"
                    android:text="Third Course"
                    android:textSize="18sp">

                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item4"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/card_round"
                android:clickable="true"
                android:tag="item4">

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:text="tasted" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="@color/blue_lagoon"
                    android:ems="12"
                    android:text="Smoked Sea Scouts"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:ems="12"
                    android:text="Fourth Course"
                    android:textSize="18sp">

                </TextView>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/comment_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp">

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <RelativeLayout
            android:id="@+id/emoji_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/close_action"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/black_overlay"
                android:clickable="true"
                android:src="@android:drawable/btn_dialog" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_marginLeft="20dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="left"
                    android:src="@drawable/pure_like" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_marginLeft="40dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/surprise" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_marginLeft="40dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/pain" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_marginLeft="40dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/creeperblob" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emoji_group"
            android:layout_gravity="bottom"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/comment_action"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:background="@drawable/button_round_small"
                android:text="Comment"
                android:textSize="10dp"
                android:tooltipText="Add Comment" />

            <Button
                android:id="@+id/msg_record"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:layout_toEndOf="@+id/comment_action"
                android:background="@drawable/button_round_small_light"
                android:ems="6"
                android:text="REC Msg"
                android:textSize="10dp" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
